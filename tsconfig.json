{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "outDir": "dist",
    "composite": true
  },
  "exclude": [
    "node_modules"
  ],
  "baseUrl": ".",
  "paths": {
    "@idyllic/compiler": [
      "packages/compiler/src/*"
    ],
    "@idyllic/server": [
      "packages/server/src/*"
    ]
  }
}
